<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:elevation="24dp"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cubiertos_en_la_mesa">

            <ImageView
                android:id="@+id/imagerestaurant2"
                android:layout_width="129dp"
                android:layout_height="129dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/stat_sys_headset" />

            <TextView
                android:id="@+id/nombrestaurant2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-smallcaps"
                android:hint="nombre 1"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.32"
                app:layout_constraintStart_toEndOf="@+id/imagerestaurant2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/telefonorestaurant2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/abril_fatface"
                android:hint="nobre 2"
                android:textColor="@color/colorAccent3"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/imagerestaurant2"
                app:layout_constraintTop_toBottomOf="@+id/nombrestaurant2" />

            <TextView
                android:id="@+id/callerestaurant2"
                android:layout_width="91dp"
                android:layout_height="22dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.545"
                app:layout_constraintStart_toEndOf="@+id/telefonorestaurant2"
                app:layout_constraintTop_toBottomOf="@+id/nombrestaurant2" />

            <Button
                android:id="@+id/button"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/rectangle"
                android:text="Button"
                tools:layout_editor_absoluteX="155dp"
                tools:layout_editor_absoluteY="81dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/rectangle"
                android:text="Button"
                tools:layout_editor_absoluteX="277dp"
                tools:layout_editor_absoluteY="81dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>